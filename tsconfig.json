{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@game/*": ["./src/pages/Game/*"],
      "tslib": ["path/to/node_modules/tslib/tslib.d.ts"]
    },
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"]
  },
  "include": [
    "api",
    "db",
    "src",
    "webpack.config.ts",
    "webpack/**/*.ts",
    "server",
    "typings/**/*.d.ts",
    "./node_modules/@types"
  ],
  "exclude": ["node_modules", "**/*.js"]
}
